<div class="families-wrapper">
  {.repeated section items}

    <div id="family-{id}" class="family {@|item-classes} {.section categories}{.repeated section @}category-{@|slugify}{.alternates with} {.end}{.end}" data-item-id="{id}">

      <a href="{customContent.wishlist}" target="_blank">
        {.if filename}
          <img src="{assetUrl}" />
        {.or}
          <img src="/assets/images/family-placeholder.jpg" />
        {.end}
      </a>

      <h1 class="title" data-content-field="title">
        <a href="{customContent.wishlist}" target="_blank">{title}</a>
      </h1>

      {.if excerpt}
        <div class="excerpt">
          {excerpt}
        </div>
      {.end}

      {.section categories}
        <div class="categories">
          {.repeated section @}
            {@}{.alternates with}, {.end}
        </div>
      {.end}

      <div class="help">
        <h6>How can you help?</h6>
        {.if customContent.wishlist}
          <a href="{customContent.wishlist}" target="_blank">
            <i class="fab fa-amazon"></i><span>{title}'s Wishlist</span>
          </a>
        {.end}
      </div>

    </div>

  {.or}
    No family lists yet.
  {.end}
</div>