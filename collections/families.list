<div class="families-wrapper">
  {.repeated section items}

    <!--WRAPPER-->

    <div id="family-{id}" class="family {@|item-classes}" data-item-id="{id}">

      {.if assetUrl}
        <img src="{assetUrl}" />
      {.or}
        <img src="{assetUrl}" />
      {.end}

      <h1 class="title" data-content-field="title">{title}</h1>

      {.if excerpt}
        <div class="excerpt">
          {excerpt}
        </div>
      {.end}

      {.section categories}
        <div class="categories">
          {.repeated section @}
            <span>{@}</span>
          {.alternates with}, {.end}
        </div
      {.end}

      <h6>How you can help</h6>
      {.if sourceUrl}
        <a href="{sourceUrl}">{title}'s List</a>
      {.end}

    </div>

  {.or}
    No family lists yet.
  {.end}
</div>